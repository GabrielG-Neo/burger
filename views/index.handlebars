
<div class="container">

<h1>Cheat Burgers</h1>

<form class="create-form">
  
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="devoured"></input>
  </div>
  <div>
    <h2>What would you like to do with this Burger?</h2>
    <input type="radio" name="devoured" value="1">I'm Going to Devour It</input>
    <input type="radio" name="devoured" value="0">I'm Craving it</input>
  </div>
  <br>
    <button id="bb" type="submit" name="devoured">Cheat Burger Time!</button>
</form>
<h2>Cheat Burger Cravings</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>I Devoured This Burger!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     {{name}}
    {{/if}}
  {{/each}}
</ul>
</div>

