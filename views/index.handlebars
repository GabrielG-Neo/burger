
<div class="container">
<h1>Cheat Burgers</h1>

<h2>Burger Cravings</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured It!!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     {{name}}
    {{/if}}
  {{/each}}
</ul>

<h3>What Burger Do You Crave?</h3>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="devoured">
  </div>
  <input type="radio" name="devoured" value="1">Devoured</input >
  <input type="radio" name="devoured" value="0">Not Devoured</input >
  <button id="bb" type="submit" name="devoured">Add My Burger</button>
</form>
</div>

